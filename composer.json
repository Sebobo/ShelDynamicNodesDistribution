{
    "name": "typo3/neos-base-distribution",
    "description" : "Neos Base Distribution",
    "license": "GPL-3.0+",
    "support": {
        "email": "hello@neos.io",
        "slack": "http://slack.neos.io/",
        "irc": "irc://irc.freenode.org/typo3-neos",
        "forum": "https://discuss.neos.io/",
        "issues": "https://jira.neos.io/",
